extends layout

block content
    if companylist
        section(class="hero is-info is-medium")
            div(class="hero-body is-mobile" style=`background-image: url(${companylist.business_picture}); background-size: cover; background-position: center center;`)
                div(class="columns")
                    div(class="column is-two-fifths")
                        h1(class='title')=companylist.company_name
                        a(href=companylist.website)
                            p(class="is-size-5 is-link has-text-link-light") Website
                    div(class="column is-two-fifths")
                    div(class="column is-two-fifths has-text-right")
                        img(src=companylist.logo class="image is-128x128" style="opacity:0.8;")
        section(class="section")
            div(class="columns is-mobile")
                div(class="column is-4 has-text-left")
                    p(class="is-size-7")
                        | Ages Served:
                        | NYI
                    p(class="is-size-7") Location: 
                        p(class="is-size-7")=companylist.address
                        p(class="is-size-7")=companylist.town
                div(class="column is-4")
                    p=companylist.description
                div(class="column is-4")
                    p Right