extends layout

block content
    section(style="flex: 1 0 auto; padding: 20px;")
        div(class='columns is-mobile is-centered')
            div(class='column is-6')
                form(action='' method='POST')
                    div(class='field')
                        label(class='label') Support Type:
                        div(class='select')
                            select(name='support_type')
                                each option in supportTypes
                                    -console.log(option.supporttype_id)
                                    option(value=option.supporttype_id)=option.support_type
                    div(class='field')
                        label(class='label') Subject:
                        p(class='help') Please briefly describe your issue/request here.
                        input(type='text' name='subject' class='input')
                    div(class='field')
                        label(class='label') Message:
                        p(class='help') Please describe your issue/request in detail here.
                        textarea(class='textarea' name='message' rows=15)
                    div(class='field')
                        button(type='Submit' class='button is-primary') Submit Message