                                                    option(value=quality.measure_id)=quality.measure_type
                                    td
                                        input(type='text' class='input' name='strengths1' required)
                                    td
                                        input(type='text' class='input' name='weaknesses1' required)
                                    td
                                        input(type='text' class='input' name='items1' required)
                                    td
                                        input(type='text' class='input' name='goal1' required)
                                    td
                                        div(class='select')
                                            select(name='priority1' required)
                                                option(value=1 selected) High
                                                option(value=2) Medium
                                                option(value=3) Low
                                    td
                                        input(type='text' class='input' name='resourcesneeded1' required)
                                    td
                                        div(class='select')
                                            select(name='cost1' required)
                                                option(value='High' selected) High
                                                option(value='Medium') Medium
                                                option(value='Low') Low
