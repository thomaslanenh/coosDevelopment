extends layout

block content
    section(class='section' style="flex: 1 0 auto;")
            div(class='columns is-mobile is-centered is-multiline')
                div(class='column is-full')
                    h1(class='has-text-centered has-text-weight-bold is-size-2') View Forms & Receipts by Company
                div(class="column is-full")
                    p(class='has-text-centered') Click on a companies name to see their historical submitted forms & receipts.
            div(class='columns is-mobile is-centered is-multiline')
                ul
                    each company in companyList
                        li(class='mt-5')
                            a( href=`/admin/formviewer/${company.company_id}`)
                                h3=company.company_name